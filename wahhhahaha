import java.util.Scanner;
class HelloWorld {
    public static void main(String[] args) {
        
        int grade = 0; //Initialize default value 0
        
        Scanner sc = new Scanner(System.in); //Used to get input
        
        System.out.println("Input your Java's Programming Score: ");
        
        int java = sc.nextInt();//Gets the input from user and store it on name2
        
        System.out.println("Input your C Programming Score: ");
        
        
        int C = sc.nextInt();//stores on name3
        
        System.out.println("Input your Database Handling Score: ");
        
        int Database = sc.nextInt();//stores on name4
        
        int average = (java + C + Database) / 3; //Gets the average of name2, 3 and 4
        
        if(average >= 90 && average <= 100){     
            /**if name5 >= 90 is true and name5 <=100 is true (&& operand will return a true value (1) to name5 (1 means true) )if both statement are true the if statement assigns a value to grade **/ 
        
           grade = 1;
        }
        
        else if(average >= 80 && average <= 89){ 
            grade = 2;
        }
        
        else if(average >= 75 && average <= 79){
            grade = 3;
        }
        
        else if(average >= 74){
            grade = 4;
        }
        
        //gradeChecker will use the value of grade value
        int gradeChecker = grade;
        
        //switch will use grade to find the case and execute the code 
        switch (grade) {
            case 1: System.out.print("Your grade is A");
            break;
            case 2: System.out.print("Your grade is B");
            break;
            case 3: System.out.print("Your grade is C");
            break;
            case 4: System.out.print("Your grade is F");
            break;
        }
    }
    
}
